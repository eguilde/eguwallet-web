          <span class="text-xs font-bold uppercase tracking-[0.2em] mb-4 block" style="color:var(--primary)">EUDI Wallet</span>
          <h2 class="text-3xl md:text-4xl font-bold" style="color:var(--fg)">{t.what.heading}</h2>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {[
            { title: t.what.card1Title, body: t.what.card1Body, icon: '‚öñÔ∏è' },
            { title: t.what.card2Title, body: t.what.card2Body, icon: 'üõ°Ô∏è' },
            { title: t.what.card3Title, body: t.what.card3Body, icon: 'üèõÔ∏è' },
          ].map(({ title, body, icon }) => (
            <div class="group flex flex-col gap-5 p-8 rounded-2xl transition-all duration-300 hover:-translate-y-1 hover:shadow-lg" style="background:var(--surface);border:1px solid var(--outline-var)">
              <div class="text-4xl">{icon}</div>
              <h3 class="font-bold text-xl" style="color:var(--fg)">{title}</h3>
              <p class="text-sm leading-relaxed opacity-75" style="color:var(--fg)">{body}</p>
