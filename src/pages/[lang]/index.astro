---
import Base from '../../layouts/Base.astro';
import Navbar from '../../components/Navbar.astro';
import { getTranslations } from '../../i18n/index';

export async function getStaticPaths() {
  const locales = [
    'ro','en','de','fr','es','it','pl','pt','hu','cs',
    'sk','bg','hr','lt','lv','et','mt','sl','sv','da','nl','el','fi','ga'
  ];
  return locales.map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params;
const t = await getTranslations(lang);
const faqItems = t.faq.items.map(({ q, a }) => ({ q, a }));

const playBadge = lang === 'ro' ? '/assets/badges/google-play-ro.svg' : '/assets/badges/google-play-en.svg';
const playUrl = 'https://play.google.com/store/apps/details?id=com.eguwallet.wallet';
---
<Base lang={lang} title={`EguWallet — ${t.hero.title}`} description={t.hero.subtitle} faqItems={faqItems}>
  <Navbar t={t} lang={lang} />
  <main class="t-bg">

    <!-- HERO -->
    <section id="download" class="pt-16 md:pt-24 pb-12 px-6">
      <div class="max-w-4xl mx-auto flex flex-col items-center text-center gap-6">
        <div class="flex items-center gap-2 text-[12px] font-semibold uppercase tracking-wider t-primary">
          <span>{t.hero.badge1}</span>
          <span class="t-fg opacity-20">·</span>
          <span>{t.hero.badge2}</span>
          <span class="t-fg opacity-20">·</span>
          <span>{t.hero.badge3}</span>
        </div>

        <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold leading-snug tracking-tight t-fg max-w-3xl">
          {t.hero.title}
        </h1>

        <p class="text-base md:text-lg leading-relaxed t-fg opacity-50 max-w-2xl">
          {t.hero.subtitle}
        </p>

        <div class="flex items-center gap-3 mt-4">
          <a href={playUrl} target="_blank" rel="noopener" class="transition-opacity hover:opacity-80">
            <img src={playBadge} alt={t.hero.downloadAndroid} class="h-[44px] w-auto" />
          </a>
          <span class="relative">
            <img src="/assets/badges/app-store.svg" alt={t.hero.downloadIos} class="h-[44px] w-auto opacity-25" />
            <span class="absolute -bottom-5 left-1/2 -translate-x-1/2 text-[10px] t-fg opacity-25 whitespace-nowrap">{t.hero.downloadIosComingSoon}</span>
          </span>
        </div>
      </div>
    </section>

    <!-- Divider -->
    <div class="max-w-4xl mx-auto px-6"><div class="h-px t-bg-surface"></div></div>

    <!-- WHAT IS IT -->
    <section id="what" class="py-16 md:py-20 px-6">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-2xl md:text-3xl font-bold mb-8 t-fg">{t.what.heading}</h2>

        <div class="flex flex-col gap-10">
          {[
            { title: t.what.card1Title, body: t.what.card1Body },
            { title: t.what.card2Title, body: t.what.card2Body },
            { title: t.what.card3Title, body: t.what.card3Body },
          ].map(({ title, body }) => (
            <div>
              <h3 class="text-lg font-semibold mb-2 t-fg">{title}</h3>
              <p class="text-[15px] leading-relaxed t-fg opacity-55">{body}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <div class="max-w-4xl mx-auto px-6"><div class="h-px t-bg-surface"></div></div>

    <!-- PRIVACY -->
    <section id="privacy" class="py-16 md:py-20 px-6">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-2xl md:text-3xl font-bold mb-2 t-fg">{t.privacy.heading}</h2>
        <p class="text-base mb-8 t-primary font-medium">{t.privacy.subheading}</p>

        <p class="text-[15px] leading-relaxed t-fg opacity-55 mb-10">{t.privacy.body}</p>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
          <div>
            <h3 class="text-lg font-semibold mb-4 t-fg">{t.privacy.example1Title}</h3>
            <div class="flex flex-col gap-3">
              {[
                { step: t.privacy.example1Step1, ok: true },
                { step: t.privacy.example1Step2, ok: true },
                { step: t.privacy.example1Step3, ok: true },
                { step: t.privacy.example1Step4, ok: false },
              ].map(({ step, ok }) => (
                <div class="flex items-start gap-3 text-[14px]">
                  <span class={`w-5 h-5 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5 text-[10px] font-bold ${ok ? 'bg-teal-100 text-teal-700' : 'bg-red-100 text-red-600'}`}>
                    {ok ? '✓' : '✗'}
                  </span>
                  <span class="t-fg opacity-65">{step}</span>
                </div>
              ))}
            </div>
          </div>

          <div>
            <h3 class="text-lg font-semibold mb-4 t-fg">{t.privacy.legalTitle}</h3>
            <div class="flex flex-col gap-3">
              {[t.privacy.legal1, t.privacy.legal2, t.privacy.legal3].map((text) => (
                <div class="flex items-start gap-3 text-[14px]">
                  <span class="w-5 h-5 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5 text-[10px] font-bold bg-slate-100 text-slate-600">§</span>
                  <span class="t-fg opacity-65 leading-relaxed">{text}</span>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>

    <div class="max-w-4xl mx-auto px-6"><div class="h-px t-bg-surface"></div></div>

    <!-- DOCUMENTS -->
    <section id="documents" class="py-16 md:py-20 px-6">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-2xl md:text-3xl font-bold mb-2 t-fg">{t.documents.heading}</h2>
        <p class="text-[15px] t-fg opacity-45 mb-8">{t.documents.subheading}</p>

        <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
          {t.documents.items.map(({ icon, title, body, status }) => (
            <div class="flex gap-4 p-4 rounded-lg t-bg-surface">
              <span class="text-2xl flex-shrink-0">{icon}</span>
              <div class="flex flex-col gap-1">
                <div class="flex items-center gap-2">
                  <h3 class="font-semibold text-[14px] t-fg">{title}</h3>
                  <span class={`text-[10px] px-2 py-0.5 rounded-full font-semibold uppercase tracking-wider ${
                    status === 'available'
                      ? 'bg-teal-100 text-teal-700'
                      : 't-bg-high t-fg opacity-45'
                  }`}>
                    {status === 'available' ? t.documents.statusAvailable : t.documents.statusSoon}
                  </span>
                </div>
                <p class="text-[13px] leading-relaxed t-fg opacity-45">{body}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <div class="max-w-4xl mx-auto px-6"><div class="h-px t-bg-surface"></div></div>

    <!-- WHERE IT WORKS -->
    <section id="usedtoday" class="py-16 md:py-20 px-6">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-2xl md:text-3xl font-bold mb-2 t-fg">{t.usedToday.heading}</h2>
        <p class="text-[15px] t-fg opacity-45 mb-8">{t.usedToday.subheading}</p>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          {[
            { name: t.usedToday.app1Name, url: t.usedToday.app1Url, body: t.usedToday.app1Body },
            { name: t.usedToday.app2Name, url: t.usedToday.app2Url, body: t.usedToday.app2Body },
          ].map(({ name, url, body }) => (
            <div class="flex flex-col gap-3 p-5 rounded-lg t-bg-surface">
              <h3 class="font-semibold t-fg">{name}</h3>
              <p class="text-[14px] leading-relaxed t-fg opacity-55 flex-1">{body}</p>
              <a href={url} target="_blank" rel="noopener"
                class="inline-flex items-center gap-2 text-[14px] font-semibold t-primary hover:underline self-start">
                {url.replace('https://','')}
                <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M7 17L17 7M17 7H7M17 7v10"/></svg>
              </a>
            </div>
          ))}
        </div>
      </div>
    </section>

    <div class="max-w-4xl mx-auto px-6"><div class="h-px t-bg-surface"></div></div>

    <!-- FUTURE -->
    <section id="future" class="py-16 md:py-20 px-6">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-2xl md:text-3xl font-bold mb-2 t-fg">{t.future.heading}</h2>
        <p class="text-[15px] t-fg opacity-45 mb-8">{t.future.subheading}</p>

        <div class="flex flex-col gap-6">
          {t.future.items.map(({ icon, title, body }) => (
            <div class="flex gap-4">
              <span class="text-xl flex-shrink-0 mt-0.5">{icon}</span>
              <div>
                <h3 class="font-semibold text-[15px] mb-1 t-fg">{title}</h3>
                <p class="text-[14px] leading-relaxed t-fg opacity-50">{body}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <div class="max-w-4xl mx-auto px-6"><div class="h-px t-bg-surface"></div></div>

    <!-- HOW IT WORKS -->
    <section id="how" class="py-16 md:py-20 px-6">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-2xl md:text-3xl font-bold mb-8 t-fg">{t.howItWorks.heading}</h2>

        <div class="flex flex-col md:flex-row gap-8">
          {[
            { title: t.howItWorks.step1Title, body: t.howItWorks.step1Body },
            { title: t.howItWorks.step2Title, body: t.howItWorks.step2Body },
            { title: t.howItWorks.step3Title, body: t.howItWorks.step3Body },
          ].map(({ title, body }) => (
            <div class="flex-1">
              <h3 class="font-semibold text-[15px] mb-2 t-fg">{title}</h3>
              <p class="text-[14px] leading-relaxed t-fg opacity-50">{body}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <div class="max-w-4xl mx-auto px-6"><div class="h-px t-bg-surface"></div></div>

    <!-- FAQ -->
    <section id="faq" class="py-16 md:py-20 px-6">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-2xl md:text-3xl font-bold mb-8 t-fg">{t.faq.heading}</h2>

        <div class="flex flex-col gap-0 border t-border rounded-lg overflow-hidden">
          {t.faq.items.map(({ q, a }, i) => (
            <details class="group t-bg-surface">
              {i > 0 && <div class="h-px t-bg-high"></div>}
              <summary class="px-5 py-4 font-medium text-[14px] cursor-pointer list-none flex items-center justify-between gap-4 select-none t-fg">
                <span>{q}</span>
                <svg class="w-4 h-4 flex-shrink-0 opacity-30 transition-transform group-open:rotate-180" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M19 9l-7 7-7-7"/></svg>
              </summary>
              <div class="px-5 pb-4 text-[14px] leading-relaxed t-fg opacity-55">{a}</div>
            </details>
          ))}
        </div>
      </div>
    </section>

    <!-- DOWNLOAD CTA -->
    <section class="py-12 px-6 t-bg-surface">
      <div class="max-w-4xl mx-auto flex flex-col sm:flex-row items-center justify-between gap-6">
        <div>
          <h2 class="text-xl font-bold t-fg">{t.nav.download} EguWallet</h2>
          <p class="text-[13px] t-fg opacity-35 mt-1">{t.hero.badge1} · {t.hero.badge2} · {t.hero.badge3}</p>
        </div>
        <div class="flex items-center gap-3">
          <a href={playUrl} target="_blank" rel="noopener" class="transition-opacity hover:opacity-80">
            <img src={playBadge} alt={t.hero.downloadAndroid} class="h-[40px] w-auto" />
          </a>
          <img src="/assets/badges/app-store.svg" alt="App Store" class="h-[40px] w-auto opacity-25" />
        </div>
      </div>
    </section>

    <!-- FOOTER -->
    <footer class="py-10 px-6 border-t t-border">
      <div class="max-w-4xl mx-auto">
        <div class="flex flex-col md:flex-row justify-between gap-8 mb-8">
          <div>
            <p class="text-sm font-bold t-fg">EguWallet</p>
            <p class="text-[12px] t-fg opacity-35 mt-1">{t.footer.tagline}</p>
            <p class="text-[11px] t-fg opacity-20 mt-1">{t.footer.provider}</p>
          </div>
          <div class="flex gap-8 text-[13px]">
            <div class="flex flex-col gap-1.5">
              <a href={`/${lang}/privacy/`} class="t-fg opacity-45 hover:opacity-75 transition-opacity">{t.footer.privacy}</a>
              <a href={`/${lang}/terms/`} class="t-fg opacity-45 hover:opacity-75 transition-opacity">{t.footer.legal}</a>
            </div>
            <div class="flex flex-col gap-1.5">
              <a href="mailto:contact@eguwallet.eu" class="t-fg opacity-45 hover:opacity-75 transition-opacity">{t.footer.contact}</a>
              <a href="https://github.com/eguilde" target="_blank" rel="noopener" class="t-fg opacity-45 hover:opacity-75 transition-opacity">GitHub</a>
            </div>
          </div>
        </div>

        <div class="flex flex-wrap gap-x-3 gap-y-1 mb-4 text-[11px] t-fg opacity-25">
          <span>eIDAS 2.0</span><span>·</span>
          <span>GDPR</span><span>·</span>
          <span>ARF 2.5+</span><span>·</span>
          <span>OpenID4VCI</span><span>·</span>
          <span>SD-JWT</span><span>·</span>
          <span>ISO 18013-5</span>
        </div>

        {t.isMachineTranslated && (
          <p class="text-[11px] t-fg opacity-20 mb-2">{t.footer.machineTranslatedNotice}</p>
        )}

        <p class="text-[11px] t-fg opacity-15">{t.footer.rights}</p>
      </div>
    </footer>

  </main>
</Base>
