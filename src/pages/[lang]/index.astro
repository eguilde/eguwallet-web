---
import Base from '../../layouts/Base.astro';
import Navbar from '../../components/Navbar.astro';
import { getTranslations } from '../../i18n/index';

export async function getStaticPaths() {
  const locales = [
    'ro','en','de','fr','es','it','pl','pt','hu','cs',
    'sk','bg','hr','lt','lv','et','mt','sl','sv','da','nl','el','fi','ga'
  ];
  return locales.map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params;
const t = await getTranslations(lang);
const faqItems = t.faq.items.map(({ q, a }) => ({ q, a }));

const playBadge = lang === 'ro' ? '/assets/badges/google-play-ro.svg' : '/assets/badges/google-play-en.svg';
const playUrl = 'https://play.google.com/store/apps/details?id=wallet.eguwallet.eu';
---
<Base lang={lang} title={`EguWallet ‚Äî ${t.hero.title}`} description={t.hero.subtitle} faqItems={faqItems}>
  <Navbar t={t} lang={lang} />
  <main id="main-content" class="t-bg">

    <!-- HERO -->
    <section id="download" class="relative overflow-hidden">
      <!-- Banner image -->
      <div class="relative w-full" style="max-height: 420px; overflow: hidden;">
        <img
          src="/assets/hero-banner.jpg"
          alt=""
          aria-hidden="true"
          width="1360"
          height="400"
          class="w-full object-cover"
          style="max-height: 420px;"
          fetchpriority="high"
          loading="eager"
        />
        <!-- Gradient overlay for text legibility -->
        <div class="absolute inset-0" style="background: linear-gradient(to bottom, rgba(0,0,0,0.15) 0%, rgba(0,0,0,0.55) 60%, var(--eg-bg, #fff) 100%);"></div>

        <!-- Logo + title overlaid on banner -->
        <div class="absolute inset-0 flex flex-col items-center justify-center text-center px-4 sm:px-6 pb-4 gap-2 sm:gap-3">
          <img
            src="/assets/logo-shield.svg"
            alt="EguWallet"
            width="80"
            height="80"
            class="w-14 h-14 sm:w-20 sm:h-20 md:w-24 md:h-24 drop-shadow-lg"
          />
          <h1 class="text-lg sm:text-2xl md:text-3xl lg:text-4xl font-bold leading-snug tracking-tight text-white drop-shadow-md max-w-2xl">
            {t.hero.title}
          </h1>
          <div class="flex flex-wrap items-center justify-center gap-x-2 gap-y-1 text-[10px] sm:text-[12px] font-semibold uppercase tracking-wider" style="color: rgba(255,255,255,0.80);">
            <span>{t.hero.badge1}</span>
            <span style="opacity:0.4">¬∑</span>
            <span>{t.hero.badge2}</span>
            <span style="opacity:0.4">¬∑</span>
            <span>{t.hero.badge3}</span>
          </div>
        </div>
      </div>

      <!-- Subtitle + download buttons below banner -->
      <div class="px-4 sm:px-6 py-6 sm:py-8 flex flex-col items-center text-center gap-4 sm:gap-5">
        <p class="text-sm sm:text-base md:text-lg leading-relaxed t-fg opacity-55 max-w-2xl">
          {t.hero.subtitle}
        </p>
        <div class="flex flex-wrap items-center justify-center gap-3">
          <a href={playUrl} target="_blank" rel="noopener" class="transition-opacity hover:opacity-80">
            <img src={playBadge} alt={t.hero.downloadAndroid} width="156" height="44" class="h-[38px] sm:h-[44px] w-auto" />
          </a>
          <span class="relative">
            <img src="/assets/badges/app-store.svg" alt={t.hero.downloadIos} width="156" height="44" class="h-[38px] sm:h-[44px] w-auto opacity-25" />
            <span class="absolute -bottom-4 sm:-bottom-5 left-1/2 -translate-x-1/2 text-[9px] sm:text-[10px] t-fg opacity-25 whitespace-nowrap">{t.hero.downloadIosComingSoon}</span>
          </span>
        </div>
      </div>
    </section>

    <!-- Divider -->
    <div class="max-w-4xl mx-auto px-4 sm:px-6"><div class="h-px t-bg-surface"></div></div>

    <!-- WHAT IS IT -->
    <section id="what" class="py-10 sm:py-16 md:py-20 px-4 sm:px-6">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-xl sm:text-2xl md:text-3xl font-bold mb-6 sm:mb-8 t-fg">{t.what.heading}</h2>

        <div class="flex flex-col gap-6 sm:gap-10">
          {[
            { title: t.what.card1Title, body: t.what.card1Body },
            { title: t.what.card2Title, body: t.what.card2Body },
            { title: t.what.card3Title, body: t.what.card3Body },
          ].map(({ title, body }) => (
            <div>
              <h3 class="text-base sm:text-lg font-semibold mb-1.5 sm:mb-2 t-fg">{title}</h3>
              <p class="text-[13px] sm:text-[15px] leading-relaxed t-fg opacity-55">{body}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <div class="max-w-4xl mx-auto px-4 sm:px-6"><div class="h-px t-bg-surface"></div></div>

    <!-- PRIVACY -->
    <section id="privacy" class="py-10 sm:py-16 md:py-20 px-4 sm:px-6">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-xl sm:text-2xl md:text-3xl font-bold mb-1.5 sm:mb-2 t-fg">{t.privacy.heading}</h2>
        <p class="text-sm sm:text-base mb-6 sm:mb-8 t-primary font-medium">{t.privacy.subheading}</p>

        <p class="text-[13px] sm:text-[15px] leading-relaxed t-fg opacity-55 mb-6 sm:mb-10">{t.privacy.body}</p>

        <div class="flex flex-col gap-8 md:grid md:grid-cols-2 md:gap-10">
          <div>
            <h3 class="text-base sm:text-lg font-semibold mb-3 sm:mb-4 t-fg">{t.privacy.example1Title}</h3>
            <div class="flex flex-col gap-2.5 sm:gap-3">
              {[
                { step: t.privacy.example1Step1, ok: true },
                { step: t.privacy.example1Step2, ok: true },
                { step: t.privacy.example1Step3, ok: true },
                { step: t.privacy.example1Step4, ok: false },
              ].map(({ step, ok }) => (
                <div class="flex items-start gap-2.5 sm:gap-3 text-[13px] sm:text-[14px]">
                  <span class={`w-5 h-5 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5 text-[10px] font-bold ${ok ? 't-bg-primary-container t-on-primary-container' : 't-bg-surface-highest t-fg opacity-45'}`}>
                    {ok ? '‚úì' : '‚úó'}
                  </span>
                  <span class="t-fg opacity-65">{step}</span>
                </div>
              ))}
            </div>
          </div>

          <div>
            <h3 class="text-base sm:text-lg font-semibold mb-3 sm:mb-4 t-fg">{t.privacy.legalTitle}</h3>
            <div class="flex flex-col gap-2.5 sm:gap-3">
              {[t.privacy.legal1, t.privacy.legal2, t.privacy.legal3].map((text) => (
                <div class="flex items-start gap-2.5 sm:gap-3 text-[13px] sm:text-[14px]">
                  <span class="w-5 h-5 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5 text-[10px] font-bold t-bg-surface-high t-fg opacity-60">¬ß</span>
                  <span class="t-fg opacity-65 leading-relaxed" set:html={text} />
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>

    <div class="max-w-4xl mx-auto px-4 sm:px-6"><div class="h-px t-bg-surface"></div></div>

    <!-- DOCUMENTS -->
    <section id="documents" class="py-10 sm:py-16 md:py-20 px-4 sm:px-6">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-xl sm:text-2xl md:text-3xl font-bold mb-1.5 sm:mb-2 t-fg">{t.documents.heading}</h2>
        <p class="text-[13px] sm:text-[15px] t-fg opacity-45 mb-6 sm:mb-8">{t.documents.subheading}</p>

        <div class="flex flex-col gap-2.5 sm:grid sm:grid-cols-2 sm:gap-3">
          {t.documents.items.map(({ icon, title, body, status }) => (
            <div class="flex gap-3 sm:gap-4 p-3 sm:p-4 rounded-lg t-bg-surface">
              <span class="text-xl sm:text-2xl flex-shrink-0">{icon}</span>
              <div class="flex flex-col gap-0.5 sm:gap-1 min-w-0">
                <div class="flex flex-wrap items-center gap-1.5 sm:gap-2">
                  <h3 class="font-semibold text-[13px] sm:text-[14px] t-fg">{title}</h3>
                  <span class={`text-[9px] sm:text-[10px] px-1.5 sm:px-2 py-0.5 rounded-full font-semibold uppercase tracking-wider ${
                    status === 'available'
                      ? 't-bg-primary-container t-on-primary-container'
                      : 't-bg-surface-high t-fg opacity-45'
                  }`}>
                    {status === 'available' ? t.documents.statusAvailable : t.documents.statusSoon}
                  </span>
                </div>
                <p class="text-[12px] sm:text-[13px] leading-relaxed t-fg opacity-45">{body}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <div class="max-w-4xl mx-auto px-4 sm:px-6"><div class="h-px t-bg-surface"></div></div>

    <!-- USE CASES -->
    <section id="usecases" class="py-10 sm:py-16 md:py-20 px-4 sm:px-6">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-xl sm:text-2xl md:text-3xl font-bold mb-1.5 sm:mb-2 t-fg">{t.useCases.heading}</h2>
        <p class="text-[13px] sm:text-[15px] t-fg opacity-45 mb-6 sm:mb-8">{t.useCases.subheading}</p>

        <div class="flex flex-col gap-6 sm:gap-8">
          {t.useCases.categories.map(({ icon, image, title, description, scenarios }) => {
            const videoSrc = image ? image.replace('/assets/illustrations/', '/assets/videos/').replace('.jpg', '.mp4') : null;
            return (
            <div>
              {image && (
                <div class="w-full rounded-xl mb-4 sm:mb-5 overflow-hidden" style="max-height: 260px;">
                  <video
                    src={videoSrc ?? undefined}
                    poster={image}
                    autoplay
                    loop
                    muted
                    playsinline
                    class="w-full h-full object-cover"
                    style="max-height: 260px;"
                  />
                </div>
              )}
              <!-- Category header -->
              <div class="flex items-center gap-2 sm:gap-3 mb-3 sm:mb-4">
                <span class="text-xl sm:text-2xl">{icon}</span>
                <h3 class="font-bold text-[15px] sm:text-base md:text-lg t-fg">{title}</h3>
              </div>
              <p class="text-[13px] sm:text-[14px] leading-relaxed t-fg opacity-50 mb-3 sm:mb-4">{description}</p>
              <!-- Scenario cards -->
              <div class="flex flex-col gap-2 sm:grid sm:grid-cols-2 sm:gap-3">
                {scenarios.map(({ emoji, name, body, legal }) => (
                  <div class="flex gap-3 p-3 sm:p-4 rounded-lg t-bg-surface">
                    <span class="text-lg flex-shrink-0 mt-0.5">{emoji}</span>
                    <div>
                      <h4 class="font-semibold text-[13px] sm:text-[14px] mb-1 t-fg">{name}</h4>
                      <p class="text-[12px] sm:text-[13px] leading-relaxed t-fg opacity-50 mb-1">{body}</p>
                      {legal && <p class="text-[10px] sm:text-[11px] t-fg opacity-30 italic">{legal}</p>}
                    </div>
                  </div>
                ))}
              </div>
            </div>
            );
          })}
        </div>
      </div>
    </section>

    <div class="max-w-4xl mx-auto px-4 sm:px-6"><div class="h-px t-bg-surface"></div></div>

    <!-- TRUST & LEGAL BINDING -->
    <section id="trust" class="py-10 sm:py-16 md:py-20 px-4 sm:px-6">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-xl sm:text-2xl md:text-3xl font-bold mb-1.5 sm:mb-2 t-fg">{t.trust.heading}</h2>
        <p class="text-[13px] sm:text-[15px] t-fg opacity-45 mb-6 sm:mb-8">{t.trust.subheading}</p>

        {t.trust.image && (
          <div class="w-full rounded-xl mb-6 sm:mb-8 overflow-hidden" style="max-height: 280px;">
            <video
              src={t.trust.image.replace('/assets/illustrations/', '/assets/videos/').replace('.jpg', '.mp4')}
              poster={t.trust.image}
              autoplay
              loop
              muted
              playsinline
              class="w-full h-full object-cover"
              style="max-height: 280px;"
            />
          </div>
        )}

        <!-- Badges -->
        <div class="flex flex-wrap gap-2 mb-8 sm:mb-10">
          {t.trust.badges.map(({ icon, label }) => (
            <span class="flex items-center gap-1.5 px-3 py-1.5 rounded-full t-bg-surface text-[11px] sm:text-[12px] t-fg opacity-75 font-medium">
              <span>{icon}</span>
              <span>{label}</span>
            </span>
          ))}
        </div>

        <div class="flex flex-col gap-8 md:grid md:grid-cols-2 md:gap-10">
          <!-- For citizens -->
          <div>
            <h3 class="text-base sm:text-lg font-semibold mb-3 sm:mb-4 t-fg">{t.trust.citizenTitle}</h3>
            <div class="flex flex-col gap-3">
              {t.trust.citizenPoints.map((point) => (
                <div class="flex items-start gap-2.5 text-[13px] sm:text-[14px]">
                  <span class="w-5 h-5 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5 text-[10px] font-bold t-bg-primary-container t-on-primary-container">‚úì</span>
                  <span class="t-fg opacity-65 leading-relaxed">{point}</span>
                </div>
              ))}
            </div>
          </div>

          <!-- For relying parties -->
          <div>
            <h3 class="text-base sm:text-lg font-semibold mb-1.5 t-fg">{t.trust.rpTitle}</h3>
            <p class="text-[11px] sm:text-[12px] t-fg opacity-40 mb-3 italic">{t.trust.rpSubtitle}</p>
            <div class="flex flex-col gap-3">
              {t.trust.rpPoints.map((point) => (
                <div class="flex items-start gap-2.5 text-[13px] sm:text-[14px]">
                  <span class="w-5 h-5 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5 text-[10px] font-bold t-bg-surface-high t-fg opacity-60">¬ß</span>
                  <span class="t-fg opacity-65 leading-relaxed">{point}</span>
                </div>
              ))}
            </div>
          </div>
        </div>

        <!-- Audit statement -->
        <div class="mt-8 sm:mt-10 p-4 sm:p-6 rounded-xl t-bg-surface">
          <h4 class="font-semibold text-[14px] sm:text-base mb-2 t-fg">{t.trust.auditTitle}</h4>
          <p class="text-[12px] sm:text-[13px] t-fg opacity-55 leading-relaxed">{t.trust.auditBody}</p>
        </div>
      </div>
    </section>

    <div class="max-w-4xl mx-auto px-4 sm:px-6"><div class="h-px t-bg-surface"></div></div>

    <!-- WHERE IT WORKS -->
    <section id="usedtoday" class="py-10 sm:py-16 md:py-20 px-4 sm:px-6">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-xl sm:text-2xl md:text-3xl font-bold mb-1.5 sm:mb-2 t-fg">{t.usedToday.heading}</h2>
        <p class="text-[13px] sm:text-[15px] t-fg opacity-45 mb-6 sm:mb-8">{t.usedToday.subheading}</p>

        <div class="flex flex-col gap-3 md:grid md:grid-cols-2 md:gap-4">
          {[
            { name: t.usedToday.app1Name, url: t.usedToday.app1Url, body: t.usedToday.app1Body },
            { name: t.usedToday.app2Name, url: t.usedToday.app2Url, body: t.usedToday.app2Body },
          ].map(({ name, url, body }) => (
            <div class="flex flex-col gap-2 sm:gap-3 p-4 sm:p-5 rounded-lg t-bg-surface">
              <h3 class="font-semibold text-[14px] sm:text-base t-fg">{name}</h3>
              <p class="text-[13px] sm:text-[14px] leading-relaxed t-fg opacity-55 flex-1">{body}</p>
              <a href={url} target="_blank" rel="noopener"
                class="inline-flex items-center gap-2 text-[13px] sm:text-[14px] font-semibold t-primary hover:underline self-start break-all">
                {url.replace('https://','')}
                <svg class="w-3.5 h-3.5 flex-shrink-0" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M7 17L17 7M17 7H7M17 7v10"/></svg>
              </a>
            </div>
          ))}
        </div>
      </div>
    </section>

    <div class="max-w-4xl mx-auto px-4 sm:px-6"><div class="h-px t-bg-surface"></div></div>

    <!-- VERIFIER / FOR INSTITUTIONS -->
    <section id="verifier" class="py-10 sm:py-16 md:py-20 px-4 sm:px-6">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-xl sm:text-2xl md:text-3xl font-bold mb-1.5 sm:mb-2 t-fg">{t.verifier.heading}</h2>
        <p class="text-[13px] sm:text-[15px] t-fg opacity-45 mb-6 sm:mb-8">{t.verifier.subheading}</p>

        <div class="flex flex-col gap-3 md:grid md:grid-cols-2 md:gap-4">
          <!-- Card 1 ‚Äî What it is -->
          <div class="flex gap-3 sm:gap-4 p-4 sm:p-5 rounded-lg t-bg-surface">
            <span class="text-xl sm:text-2xl flex-shrink-0">üèõÔ∏è</span>
            <div>
              <h3 class="font-semibold text-[14px] sm:text-base mb-1.5 t-fg">{t.verifier.card1Title}</h3>
              <p class="text-[13px] sm:text-[14px] leading-relaxed t-fg opacity-55">{t.verifier.card1Body}</p>
            </div>
          </div>

          <!-- Card 2 ‚Äî How to start + Play badge -->
          <div class="flex gap-3 sm:gap-4 p-4 sm:p-5 rounded-lg t-bg-surface">
            <span class="text-xl sm:text-2xl flex-shrink-0">üì≤</span>
            <div class="flex flex-col gap-3">
              <h3 class="font-semibold text-[14px] sm:text-base mb-1 t-fg">{t.verifier.card2Title}</h3>
              <p class="text-[13px] sm:text-[14px] leading-relaxed t-fg opacity-55">{t.verifier.card2Body}</p>
              <a
                href="https://play.google.com/store/apps/details?id=com.eguwallet.verifier"
                target="_blank"
                rel="noopener"
                class="transition-opacity hover:opacity-80 self-start"
              >
                <img
                  src={playBadge}
                  alt={t.verifier.playBadgeAlt}
                  class="h-[36px] sm:h-[40px] w-auto"
                />
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <div class="max-w-4xl mx-auto px-4 sm:px-6"><div class="h-px t-bg-surface"></div></div>

    <!-- INTEGRATE / SDK -->
    <section id="integrate" class="py-10 sm:py-16 md:py-20 px-4 sm:px-6 t-bg-surface-high">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-xl sm:text-2xl md:text-3xl font-bold mb-1.5 sm:mb-2 t-fg">{t.integrate.heading}</h2>
        <p class="text-[13px] sm:text-[15px] t-fg opacity-45 mb-6 sm:mb-8">{t.integrate.subheading}</p>

        <!-- SDK badges -->
        <div class="flex flex-wrap gap-2 mb-6 sm:mb-8">
          {[t.integrate.badge1, t.integrate.badge2, t.integrate.badge3, t.integrate.badge4].map((badge) => (
            <span class="px-2.5 py-1 rounded-full text-[11px] sm:text-[12px] font-semibold t-fg t-bg-surface border t-border">{badge}</span>
          ))}
        </div>

        <div class="flex flex-col gap-3 md:grid md:grid-cols-3 md:gap-4 mb-6 sm:mb-8">
          <!-- Card 1 ‚Äî SDK -->
          <div class="flex flex-col gap-2 p-4 sm:p-5 rounded-lg t-bg">
            <span class="text-2xl sm:text-3xl">üîå</span>
            <h3 class="font-semibold text-[14px] sm:text-base t-fg">{t.integrate.card1Title}</h3>
            <p class="text-[13px] sm:text-[14px] leading-relaxed t-fg opacity-55">{t.integrate.card1Body}</p>
          </div>
          <!-- Card 2 ‚Äî Compliance -->
          <div class="flex flex-col gap-2 p-4 sm:p-5 rounded-lg t-bg">
            <span class="text-2xl sm:text-3xl">‚úÖ</span>
            <h3 class="font-semibold text-[14px] sm:text-base t-fg">{t.integrate.card2Title}</h3>
            <p class="text-[13px] sm:text-[14px] leading-relaxed t-fg opacity-55">{t.integrate.card2Body}</p>
          </div>
          <!-- Card 3 ‚Äî Use cases -->
          <div class="flex flex-col gap-2 p-4 sm:p-5 rounded-lg t-bg">
            <span class="text-2xl sm:text-3xl">üöÄ</span>
            <h3 class="font-semibold text-[14px] sm:text-base t-fg">{t.integrate.card3Title}</h3>
            <p class="text-[13px] sm:text-[14px] leading-relaxed t-fg opacity-55">{t.integrate.card3Body}</p>
          </div>
        </div>

        <a
          href={`/${lang}/contact/`}
          class="inline-flex items-center gap-2 px-5 py-3 rounded-lg font-semibold text-[14px] transition-opacity hover:opacity-90"
          style="background: var(--eg-primary, #A01E28); color: var(--eg-on-primary, #fff);"
        >
          {t.integrate.cta} ‚Üí
        </a>
      </div>
    </section>

    <div class="max-w-4xl mx-auto px-4 sm:px-6"><div class="h-px t-bg-surface"></div></div>

    <!-- FUTURE -->
    <section id="future" class="py-10 sm:py-16 md:py-20 px-4 sm:px-6">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-xl sm:text-2xl md:text-3xl font-bold mb-1.5 sm:mb-2 t-fg">{t.future.heading}</h2>
        <p class="text-[13px] sm:text-[15px] t-fg opacity-45 mb-6 sm:mb-8">{t.future.subheading}</p>

        <div class="flex flex-col gap-4 sm:gap-6">
          {t.future.items.map(({ icon, title, body }) => (
            <div class="flex gap-3 sm:gap-4">
              <span class="text-lg sm:text-xl flex-shrink-0 mt-0.5">{icon}</span>
              <div>
                <h3 class="font-semibold text-[14px] sm:text-[15px] mb-1 t-fg">{title}</h3>
                <p class="text-[13px] sm:text-[14px] leading-relaxed t-fg opacity-50">{body}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <div class="max-w-4xl mx-auto px-4 sm:px-6"><div class="h-px t-bg-surface"></div></div>

    <!-- HOW IT WORKS -->
    <section id="how" class="py-10 sm:py-16 md:py-20 px-4 sm:px-6">
