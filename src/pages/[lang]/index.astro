---
import Base from '../../layouts/Base.astro';
import Navbar from '../../components/Navbar.astro';
import { getTranslations } from '../../i18n/index';

export async function getStaticPaths() {
  const locales = [
    'ro','en','de','fr','es','it','pl','pt','hu','cs',
    'sk','bg','hr','lt','lv','et','mt','sl','sv','da','nl','el','fi','ga'
  ];
  return locales.map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params;
const t = await getTranslations(lang);
const faqItems = t.faq.items.map(({ q, a }) => ({ q, a }));

const playBadge = lang === 'ro' ? '/assets/badges/google-play-ro.svg' : '/assets/badges/google-play-en.svg';
const playUrl = 'https://play.google.com/store/apps/details?id=com.eguwallet.wallet';
---
<Base lang={lang} title={`EguWallet â€” ${t.hero.title}`} description={t.hero.subtitle} faqItems={faqItems}>
  <Navbar t={t} lang={lang} />
  <main>

    <!-- HERO -->
    <section class="relative overflow-hidden bg-[#0B0F1A]">
      <!-- Subtle gradient orbs -->
      <div class="absolute top-[-200px] right-[-100px] w-[500px] h-[500px] rounded-full bg-[#1e3a5f] opacity-20 blur-[150px]"></div>
      <div class="absolute bottom-[-100px] left-[-100px] w-[400px] h-[400px] rounded-full bg-[#3b1d5e] opacity-15 blur-[120px]"></div>

      <div class="relative max-w-5xl mx-auto px-6 py-20 md:py-32">
        <div class="flex flex-col items-center text-center gap-8">
          <!-- Logo mark -->
          <div class="flex items-center gap-4">
            <div class="w-12 h-12 rounded-2xl bg-gradient-to-br from-[#4F46E5] to-[#7C3AED] flex items-center justify-center shadow-lg shadow-[#4F46E5]/20">
              <svg class="w-7 h-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z" />
              </svg>
            </div>
            <span class="text-2xl font-bold text-white tracking-tight">EguWallet</span>
          </div>

          <!-- Badges -->
          <div class="flex flex-wrap justify-center gap-2">
            <span class="px-3 py-1 rounded-full text-[11px] font-medium text-white/70 border border-white/10 bg-white/5">{t.hero.badge1}</span>
            <span class="px-3 py-1 rounded-full text-[11px] font-medium text-white/70 border border-white/10 bg-white/5">{t.hero.badge2}</span>
            <span class="px-3 py-1 rounded-full text-[11px] font-medium text-emerald-400/80 border border-emerald-400/20 bg-emerald-400/5">{t.hero.badge3}</span>
          </div>

          <!-- Headline -->
          <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-[3.5rem] font-extrabold leading-[1.15] tracking-tight text-white max-w-3xl">
            {t.hero.title}
          </h1>

          <p class="text-base md:text-lg text-white/50 leading-relaxed max-w-2xl">
            {t.hero.subtitle}
          </p>

          <!-- Store badges -->
          <div class="flex flex-col sm:flex-row items-center gap-4 mt-2">
            <a href={playUrl} target="_blank" rel="noopener" class="transition-opacity hover:opacity-80">
              <img src={playBadge} alt={t.hero.downloadAndroid} height="48" class="h-12 w-auto" />
            </a>
            <div class="flex items-center gap-2.5 h-12 px-4 rounded-lg bg-white/[0.06] border border-white/10">
              <svg class="w-5 h-5 text-white/40" viewBox="0 0 24 24" fill="currentColor"><path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.8-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/></svg>
              <div class="flex flex-col">
                <span class="text-[9px] text-white/30 uppercase tracking-wider leading-none">{t.hero.downloadIosComingSoon}</span>
                <span class="text-[13px] text-white/50 font-medium leading-tight">App Store</span>
              </div>
            </div>
          </div>

          <!-- QR code -->
          <div class="flex items-center gap-3 mt-2">
            <div class="p-2 bg-white rounded-xl">
              <img src="/assets/qr-download.png" alt="QR" width="72" height="72" class="w-[72px] h-[72px]" />
            </div>
            <span class="text-xs text-white/30 max-w-[120px] leading-snug">Scan to download from Google Play</span>
          </div>
        </div>
      </div>
    </section>

    <!-- WHAT IS IT -->
    <section id="what" class="py-20 md:py-28 px-6" style="background:var(--bg)">
      <div class="max-w-5xl mx-auto">
        <div class="max-w-2xl mx-auto text-center mb-14">
          <p class="text-xs font-semibold uppercase tracking-[0.15em] mb-3" style="color:var(--primary)">EUDI Wallet</p>
          <h2 class="text-2xl md:text-3xl font-bold leading-snug" style="color:var(--fg)">{t.what.heading}</h2>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          {[
            { title: t.what.card1Title, body: t.what.card1Body, icon: 'âš–ï¸' },
            { title: t.what.card2Title, body: t.what.card2Body, icon: 'ðŸ›¡ï¸' },
            { title: t.what.card3Title, body: t.what.card3Body, icon: 'ðŸ›ï¸' },
          ].map(({ title, body, icon }) => (
            <div class="flex flex-col gap-4 p-6 rounded-xl" style="background:var(--surface);border:1px solid var(--outline-var)">
              <span class="text-2xl">{icon}</span>
              <h3 class="font-semibold text-[15px]" style="color:var(--fg)">{title}</h3>
              <p class="text-[13px] leading-relaxed opacity-60" style="color:var(--fg)">{body}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- PRIVACY -->
    <section id="privacy" class="py-20 md:py-28 px-6" style="background:var(--surface-low)">
      <div class="max-w-5xl mx-auto">
        <div class="max-w-2xl mx-auto text-center mb-14">
          <p class="text-xs font-semibold uppercase tracking-[0.15em] mb-3" style="color:var(--primary)">Selective Disclosure</p>
          <h2 class="text-2xl md:text-3xl font-bold leading-snug" style="color:var(--fg)">{t.privacy.heading}</h2>
          <p class="mt-3 text-sm" style="color:var(--primary)">{t.privacy.subheading}</p>
        </div>

        <p class="text-center max-w-2xl mx-auto mb-10 text-[13px] leading-relaxed opacity-60" style="color:var(--fg)">{t.privacy.body}</p>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="flex flex-col gap-4 p-6 rounded-xl" style="background:var(--surface);border:1px solid var(--outline-var)">
            <h3 class="font-semibold text-[15px]" style="color:var(--fg)">{t.privacy.example1Title}</h3>
            <div class="flex flex-col gap-3">
              {[
                { step: t.privacy.example1Step1, ok: true },
                { step: t.privacy.example1Step2, ok: true },
                { step: t.privacy.example1Step3, ok: true },
                { step: t.privacy.example1Step4, ok: false },
              ].map(({ step, ok }) => (
                <div class="flex items-start gap-3 text-[13px]">
                  <span class={`w-5 h-5 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5 text-[10px] font-bold ${ok ? 'bg-emerald-500/15 text-emerald-600' : 'bg-red-500/15 text-red-500'}`}>
                    {ok ? 'âœ“' : 'âœ—'}
                  </span>
                  <span class="opacity-70" style="color:var(--fg)">{step}</span>
                </div>
              ))}
            </div>
          </div>

          <div class="flex flex-col gap-4 p-6 rounded-xl" style="background:var(--surface);border:1px solid var(--outline-var)">
            <h3 class="font-semibold text-[15px]" style="color:var(--fg)">{t.privacy.legalTitle}</h3>
            <div class="flex flex-col gap-3">
              {[t.privacy.legal1, t.privacy.legal2, t.privacy.legal3].map((text) => (
                <div class="flex items-start gap-3 text-[13px]">
                  <span class="w-5 h-5 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5 text-[10px] bg-blue-500/10 text-blue-500">Â§</span>
                  <span class="opacity-70 leading-relaxed" style="color:var(--fg)">{text}</span>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- DOCUMENTS -->
    <section id="documents" class="py-20 md:py-28 px-6" style="background:var(--bg)">
      <div class="max-w-5xl mx-auto">
        <div class="max-w-2xl mx-auto text-center mb-14">
          <p class="text-xs font-semibold uppercase tracking-[0.15em] mb-3" style="color:var(--primary)">Digital Documents</p>
          <h2 class="text-2xl md:text-3xl font-bold leading-snug" style="color:var(--fg)">{t.documents.heading}</h2>
          <p class="mt-3 text-sm opacity-50" style="color:var(--fg)">{t.documents.subheading}</p>
        </div>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
          {t.documents.items.map(({ icon, title, body, status }) => (
            <div class="flex flex-col gap-3 p-5 rounded-xl" style="background:var(--surface);border:1px solid var(--outline-var)">
              <span class="text-xl">{icon}</span>
              <h3 class="font-semibold text-[14px]" style="color:var(--fg)">{title}</h3>
              <p class="text-[12px] leading-relaxed opacity-55 flex-1" style="color:var(--fg)">{body}</p>
              <span
                class="text-[10px] px-2.5 py-1 rounded-full font-semibold self-start uppercase tracking-wider"
                style={status === 'available'
                  ? 'background:#16a34a12;color:#16a34a;border:1px solid #16a34a25'
                  : 'background:var(--surface-high);color:var(--fg);border:1px solid var(--outline-var);opacity:0.5'}
              >
                {status === 'available' ? t.documents.statusAvailable : t.documents.statusSoon}
              </span>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- WHERE IT WORKS -->
    <section id="usedtoday" class="py-20 md:py-28 px-6" style="background:var(--surface-low)">
      <div class="max-w-5xl mx-auto">
        <div class="max-w-2xl mx-auto text-center mb-14">
          <p class="text-xs font-semibold uppercase tracking-[0.15em] mb-3" style="color:var(--primary)">In Production</p>
          <h2 class="text-2xl md:text-3xl font-bold leading-snug" style="color:var(--fg)">{t.usedToday.heading}</h2>
          <p class="mt-3 text-sm opacity-50" style="color:var(--fg)">{t.usedToday.subheading}</p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-3xl mx-auto">
          {[
            { name: t.usedToday.app1Name, url: t.usedToday.app1Url, body: t.usedToday.app1Body },
            { name: t.usedToday.app2Name, url: t.usedToday.app2Url, body: t.usedToday.app2Body },
          ].map(({ name, url, body }) => (
            <div class="flex flex-col gap-4 p-6 rounded-xl" style="background:var(--surface);border:1px solid var(--outline-var)">
              <h3 class="font-semibold" style="color:var(--fg)">{name}</h3>
              <p class="text-[13px] leading-relaxed opacity-60 flex-1" style="color:var(--fg)">{body}</p>
              <a href={url} target="_blank" rel="noopener"
                class="inline-flex items-center gap-2 px-4 py-2 rounded-lg text-[13px] font-semibold self-start"
                style="background:var(--primary);color:#fff">
                {t.usedToday.badgeText}
                <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M7 17L17 7M17 7H7M17 7v10"/></svg>
              </a>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- FUTURE -->
    <section id="future" class="py-20 md:py-28 px-6" style="background:var(--bg)">
      <div class="max-w-5xl mx-auto">
        <div class="max-w-2xl mx-auto text-center mb-14">
          <p class="text-xs font-semibold uppercase tracking-[0.15em] mb-3" style="color:var(--primary)">Roadmap</p>
          <h2 class="text-2xl md:text-3xl font-bold leading-snug" style="color:var(--fg)">{t.future.heading}</h2>
          <p class="mt-3 text-sm opacity-50" style="color:var(--fg)">{t.future.subheading}</p>
        </div>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
          {t.future.items.map(({ icon, title, body }) => (
            <div class="flex flex-col gap-3 p-6 rounded-xl" style="background:var(--surface);border:1px solid var(--outline-var)">
              <span class="text-xl">{icon}</span>
              <h3 class="font-semibold text-[14px]" style="color:var(--fg)">{title}</h3>
              <p class="text-[13px] leading-relaxed opacity-60" style="color:var(--fg)">{body}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- HOW IT WORKS -->
    <section id="how" class="py-20 md:py-28 px-6" style="background:var(--surface-low)">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-14">
          <h2 class="text-2xl md:text-3xl font-bold" style="color:var(--fg)">{t.howItWorks.heading}</h2>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          {[
            { title: t.howItWorks.step1Title, body: t.howItWorks.step1Body },
            { title: t.howItWorks.step2Title, body: t.howItWorks.step2Body },
            { title: t.howItWorks.step3Title, body: t.howItWorks.step3Body },
          ].map(({ title, body }) => (
            <div class="flex flex-col gap-4 p-6 rounded-xl text-center" style="background:var(--surface);border:1px solid var(--outline-var)">
              <h3 class="font-semibold text-[15px]" style="color:var(--fg)">{title}</h3>
              <p class="text-[13px] leading-relaxed opacity-60" style="color:var(--fg)">{body}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- FAQ -->
    <section id="faq" class="py-20 md:py-28 px-6" style="background:var(--bg)">
      <div class="max-w-3xl mx-auto">
        <div class="text-center mb-14">
          <h2 class="text-2xl md:text-3xl font-bold" style="color:var(--fg)">{t.faq.heading}</h2>
        </div>
        <div class="flex flex-col gap-3">
          {t.faq.items.map(({ q, a }) => (
            <details class="group rounded-xl overflow-hidden" style="background:var(--surface);border:1px solid var(--outline-var)">
              <summary class="px-6 py-4 font-medium text-[14px] cursor-pointer list-none flex items-center justify-between gap-4 select-none" style="color:var(--fg)">
                <span>{q}</span>
                <svg class="w-4 h-4 flex-shrink-0 opacity-30 transition-transform group-open:rotate-180" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M19 9l-7 7-7-7"/></svg>
              </summary>
              <div class="px-6 pb-5 text-[13px] leading-relaxed opacity-60" style="color:var(--fg)">{a}</div>
            </details>
          ))}
        </div>
      </div>
    </section>

    <!-- DOWNLOAD CTA -->
    <section class="py-16 px-6 bg-[#0B0F1A]">
      <div class="max-w-3xl mx-auto text-center flex flex-col items-center gap-6">
        <h2 class="text-2xl md:text-3xl font-bold text-white">{t.nav.download} EguWallet</h2>
        <p class="text-sm text-white/40 max-w-lg">{t.hero.subtitle}</p>
        <div class="flex flex-col sm:flex-row items-center gap-4">
          <a href={playUrl} target="_blank" rel="noopener" class="transition-opacity hover:opacity-80">
            <img src={playBadge} alt={t.hero.downloadAndroid} height="48" class="h-12 w-auto" />
          </a>
          <div class="p-2 bg-white rounded-xl">
            <img src="/assets/qr-download.png" alt="QR" width="64" height="64" class="w-16 h-16" />
          </div>
        </div>
      </div>
    </section>

    <!-- FOOTER -->
    <footer class="py-12 px-6" style="background:var(--surface-low);border-top:1px solid var(--outline-var)">
      <div class="max-w-5xl mx-auto">
        <div class="flex flex-col md:flex-row justify-between gap-10 mb-10">
          <div class="flex flex-col gap-2">
            <div class="flex items-center gap-2.5">
              <div class="w-8 h-8 rounded-lg bg-gradient-to-br from-[#4F46E5] to-[#7C3AED] flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z" />
                </svg>
              </div>
              <span class="text-base font-bold" style="color:var(--fg)">EguWallet</span>
            </div>
            <p class="text-xs opacity-40 max-w-xs" style="color:var(--fg)">{t.footer.tagline}</p>
            <p class="text-[11px] opacity-30" style="color:var(--fg)">{t.footer.provider}</p>
          </div>

          <div class="flex gap-10 text-[13px]">
            <div class="flex flex-col gap-2">
              <span class="text-[11px] font-semibold uppercase tracking-wider opacity-30" style="color:var(--fg)">Legal</span>
              <a href={`/${lang}/privacy/`} class="opacity-50 hover:opacity-80 transition-opacity" style="color:var(--fg)">{t.footer.privacy}</a>
              <a href={`/${lang}/terms/`} class="opacity-50 hover:opacity-80 transition-opacity" style="color:var(--fg)">{t.footer.legal}</a>
            </div>
            <div class="flex flex-col gap-2">
              <span class="text-[11px] font-semibold uppercase tracking-wider opacity-30" style="color:var(--fg)">Links</span>
              <a href="mailto:contact@eguwallet.eu" class="opacity-50 hover:opacity-80 transition-opacity" style="color:var(--fg)">{t.footer.contact}</a>
              <a href="https://github.com/eguilde" target="_blank" rel="noopener" class="opacity-50 hover:opacity-80 transition-opacity" style="color:var(--fg)">GitHub</a>
            </div>
          </div>
        </div>

        <!-- Compliance -->
        <div class="flex flex-wrap justify-center gap-2 mb-6 text-[10px]">
          {['eIDAS 2.0', 'GDPR', 'ARF 2.5+', 'OpenID4VCI', 'SD-JWT', 'ISO 18013-5'].map((label) => (
            <span class="px-2.5 py-1 rounded-full font-medium" style="background:var(--surface);border:1px solid var(--outline-var);color:var(--fg);opacity:0.5">{label}</span>
          ))}
        </div>

        {t.isMachineTranslated && (
          <p class="text-[11px] text-center opacity-30 mb-3" style="color:var(--fg)">{t.footer.machineTranslatedNotice}</p>
        )}

        <div class="text-center text-[11px] opacity-25" style="color:var(--fg)">{t.footer.rights}</div>
      </div>
    </footer>

  </main>
</Base>
