---
import Base from '../../layouts/Base.astro';
import Navbar from '../../components/Navbar.astro';
import { getTranslations } from '../../i18n/index';

export async function getStaticPaths() {
  const locales = [
    'ro','en','de','fr','es','it','pl','pt','hu','cs',
    'sk','bg','hr','lt','lv','et','mt','sl','sv','da','nl','el','fi','ga'
  ];
  return locales.map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params;
const t = await getTranslations(lang);
const faqItems = t.faq.items.map(({ q, a }) => ({ q, a }));

const playBadge = lang === 'ro' ? '/assets/google-play-badge-ro.svg' : '/assets/google-play-badge-en.svg';
---
<Base lang={lang} title={`EguWallet ‚Äî ${t.hero.title}`} description={t.hero.subtitle} faqItems={faqItems}>
  <Navbar t={t} lang={lang} />
  <main>

    <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê HERO ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
    <section class="relative overflow-hidden">
      <!-- Gradient background -->
      <div class="absolute inset-0 bg-gradient-to-br from-[#0a0520] via-[#1a0a35] to-[#0d1b3e]"></div>
      <div class="absolute top-0 right-0 w-[600px] h-[600px] rounded-full bg-[#C41E3A] opacity-10 blur-[120px] -translate-y-1/2 translate-x-1/3"></div>
      <div class="absolute bottom-0 left-0 w-[400px] h-[400px] rounded-full bg-[#003399] opacity-15 blur-[100px] translate-y-1/2 -translate-x-1/3"></div>

      <div class="relative max-w-6xl mx-auto px-6 py-24 md:py-36 flex flex-col lg:flex-row items-center gap-16">
        <!-- Left: copy -->
        <div class="flex-1 flex flex-col gap-8 text-center lg:text-left">
          <!-- Trust badges -->
          <div class="flex flex-wrap justify-center lg:justify-start gap-3">
            <span class="px-4 py-1.5 rounded-full text-xs font-semibold tracking-wide bg-white/10 text-white/90 border border-white/20 backdrop-blur-sm">{t.hero.badge1}</span>
            <span class="px-4 py-1.5 rounded-full text-xs font-semibold tracking-wide bg-white/10 text-white/90 border border-white/20 backdrop-blur-sm">{t.hero.badge2}</span>
            <span class="px-4 py-1.5 rounded-full text-xs font-semibold tracking-wide bg-emerald-500/20 text-emerald-300 border border-emerald-400/30 backdrop-blur-sm">{t.hero.badge3}</span>
          </div>

          <h1 class="text-4xl md:text-5xl lg:text-6xl font-extrabold leading-[1.1] tracking-tight text-white">
            {t.hero.title}
          </h1>

          <p class="text-lg md:text-xl text-white/70 leading-relaxed max-w-xl mx-auto lg:mx-0">
            {t.hero.subtitle}
          </p>

          <!-- Download row: official badges + QR -->
          <div class="flex flex-col sm:flex-row items-center gap-6 mt-4">
            <div class="flex flex-col gap-3">
              <!-- Google Play official badge -->
