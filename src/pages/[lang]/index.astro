                { step: t.privacy.example1Step1, icon: 'üì±', ok: true },
                { step: t.privacy.example1Step2, icon: 'üì©', ok: true },
                { step: t.privacy.example1Step3, icon: '‚úÖ', ok: true },
                { step: t.privacy.example1Step4, icon: 'üö´', ok: false },
              ].map(({ step, icon, ok }) => (
                <div class="flex items-start gap-4 text-sm">
                  <span class="w-8 h-8 rounded-lg flex items-center justify-center flex-shrink-0 text-lg"
                    style={ok ? 'background:#2E7D3220' : 'background:#BA1A1A20'}>{icon}</span>
                  <span style="color:var(--fg)" class="pt-1">{step}</span>
                </div>
              ))}
            </div>
          </div>

          <div class="flex flex-col gap-5 p-8 rounded-2xl" style="background:var(--surface);border:1px solid var(--outline-var)">
            <h3 class="font-bold text-lg" style="color:var(--fg)">{t.privacy.legalTitle}</h3>
            <div class="flex flex-col gap-4">
              {[t.privacy.legal1, t.privacy.legal2, t.privacy.legal3].map((legal) => (
                <div class="flex items-start gap-4 text-sm">
                  <span class="w-8 h-8 rounded-lg flex items-center justify-center flex-shrink-0 text-lg" style="background:var(--surface-high)">‚öñÔ∏è</span>
                  <span class="pt-1 leading-relaxed opacity-75" style="color:var(--fg)">{legal}</span>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê DOCUMENTS ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
    <section id="documents" class="py-24 px-6" style="background:var(--bg)">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-16">
          <span class="text-xs font-bold uppercase tracking-[0.2em] mb-4 block" style="color:var(--primary)">Digital Documents</span>
          <h2 class="text-3xl md:text-4xl font-bold" style="color:var(--fg)">{t.documents.heading}</h2>
          <p class="mt-4 opacity-60" style="color:var(--fg)">{t.documents.subheading}</p>
        </div>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
          {t.documents.items.map(({ icon, title, body, status }) => (
            <div class="flex flex-col gap-4 p-6 rounded-2xl transition-all duration-300 hover:-translate-y-1 hover:shadow-lg" style="background:var(--surface);border:1px solid var(--outline-var)">
              <div class="w-12 h-12 rounded-xl flex items-center justify-center text-2xl" style="background:var(--surface-high)">{icon}</div>
              <h3 class="font-semibold" style="color:var(--fg)">{title}</h3>
              <p class="text-xs leading-relaxed opacity-65 flex-1" style="color:var(--fg)">{body}</p>
              <span
                class="text-[11px] px-3 py-1 rounded-full font-semibold self-start uppercase tracking-wider"
                style={status === 'available'
                  ? 'background:#2E7D3218;color:#2E7D32;border:1px solid #2E7D3230'
                  : 'background:var(--surface-high);color:var(--fg);border:1px solid var(--outline-var);opacity:0.6'}
