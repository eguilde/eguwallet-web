        <h2 class="text-3xl md:text-4xl font-bold text-white">{t.nav.download} EguWallet</h2>
        <p class="text-lg text-white/80 max-w-xl">{t.hero.subtitle}</p>
        <div class="flex flex-col sm:flex-row items-center gap-6">
          <a href="https://play.google.com/store/apps/details?id=com.eguwallet.wallet" target="_blank" rel="noopener">
            <img src={playBadge} alt={t.hero.downloadAndroid} width="200" height="60" class="h-[60px] w-auto" />
          </a>
          <div class="p-2 bg-white rounded-xl">
            <img src="/assets/qr-download.png" alt="QR Code" width="80" height="80" class="w-20 h-20" />
