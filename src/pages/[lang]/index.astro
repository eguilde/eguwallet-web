---
import Base from '../../layouts/Base.astro';
import Navbar from '../../components/Navbar.astro';
import { getTranslations } from '../../i18n/index';

export async function getStaticPaths() {
  const locales = [
    'ro','en','de','fr','es','it','pl','pt','hu','cs',
    'sk','bg','hr','lt','lv','et','mt','sl','sv','da','nl','el','fi','ga'
  ];
  return locales.map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params;
const t = await getTranslations(lang);
const faqItems = t.faq.items.map(({ q, a }) => ({ q, a }));

const playBadge = lang === 'ro' ? '/assets/badges/google-play-ro.svg' : '/assets/badges/google-play-en.svg';
const playUrl = 'https://play.google.com/store/apps/details?id=wallet.eguwallet.eu';
---
<Base lang={lang} title={`EguWallet ‚Äî ${t.hero.title}`} description={t.hero.subtitle} faqItems={faqItems}>
  <Navbar t={t} lang={lang} />
  <main id="main-content" class="t-bg">

    <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê HERO ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
    <section id="download" class="relative overflow-hidden">
      <!-- Banner -->
      <div class="relative w-full" style="max-height: 440px; overflow: hidden;">
        <img
          src="/assets/hero-banner.jpg"
          alt=""
          aria-hidden="true"
          width="1360"
          height="440"
          class="w-full object-cover"
          style="max-height: 440px;"
          fetchpriority="high"
          loading="eager"
        />
        <!-- Deep gradient for legibility -->
        <div class="absolute inset-0" style="background: linear-gradient(to bottom, rgba(10,4,5,0.30) 0%, rgba(10,4,5,0.65) 55%, var(--eg-bg, #FFFBFF) 100%);"></div>

        <!-- Logo + title on banner -->
        <div class="absolute inset-0 flex flex-col items-center justify-center text-center px-4 sm:px-6 pb-8 gap-3">
          <img
            src="/assets/logo-shield.svg"
            alt="EguWallet"
            width="88"
            height="88"
            class="w-16 h-16 sm:w-20 sm:h-20 md:w-24 md:h-24 drop-shadow-xl"
          />
          <h1 class="text-xl sm:text-3xl md:text-4xl font-bold leading-tight tracking-tight text-white drop-shadow-lg max-w-2xl">
            {t.hero.title}
          </h1>
          <div class="flex flex-wrap items-center justify-center gap-x-3 gap-y-1 text-xs sm:text-sm font-semibold uppercase tracking-widest" style="color: rgba(255,255,255,0.75);">
            <span>{t.hero.badge1}</span>
            <span style="opacity:0.35">¬∑</span>
            <span>{t.hero.badge2}</span>
            <span style="opacity:0.35">¬∑</span>
            <span>{t.hero.badge3}</span>
          </div>
        </div>
      </div>

      <!-- Subtitle + download below banner -->
      <div class="px-4 sm:px-6 py-8 sm:py-12 flex flex-col items-center text-center gap-5">
        <p class="text-sm sm:text-base md:text-lg leading-relaxed t-fg opacity-55 max-w-2xl">
          {t.hero.subtitle}
        </p>
        <div class="flex flex-wrap items-center justify-center gap-3 sm:gap-4">
          <a href={playUrl} target="_blank" rel="noopener" class="transition-opacity hover:opacity-80">
            <img src={playBadge} alt={t.hero.downloadAndroid} width="156" height="46" class="h-10 sm:h-12 w-auto" />
          </a>
          <span class="relative">
            <img src="/assets/badges/app-store.svg" alt={t.hero.downloadIos} width="156" height="46" class="h-10 sm:h-12 w-auto opacity-25" />
            <span class="absolute -bottom-5 left-1/2 -translate-x-1/2 text-xs t-fg opacity-25 whitespace-nowrap">{t.hero.downloadIosComingSoon}</span>
          </span>
        </div>
      </div>
    </section>

    <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê WHAT IS IT ‚Äî light glass cards ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
    <section id="what" class="py-16 sm:py-20 md:py-24 px-4 sm:px-6">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold mb-3 t-fg eg-fade-up">{t.what.heading}</h2>
        <div class="flex flex-col gap-4 mt-8">
          {[
            { title: t.what.card1Title, body: t.what.card1Body },
            { title: t.what.card2Title, body: t.what.card2Body },
            { title: t.what.card3Title, body: t.what.card3Body },
          ].map(({ title, body }) => (
            <div class="eg-glass p-5 sm:p-6 eg-fade-up">
              <h3 class="text-base sm:text-lg font-semibold mb-2 t-fg">{title}</h3>
              <p class="text-sm sm:text-base leading-relaxed t-fg opacity-55">{body}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê PRIVACY ‚Äî dark section ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
    <section id="privacy" class="eg-section-dark py-16 sm:py-20 md:py-24 px-4 sm:px-6">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold mb-2 eg-fade-up" style="color:#f0e8e8;">{t.privacy.heading}</h2>
        <p class="text-base sm:text-lg mb-3 eg-fade-up" style="background:var(--eg-gradient);-webkit-background-clip:text;-webkit-text-fill-color:transparent;background-clip:text;font-weight:600;">{t.privacy.subheading}</p>
        <p class="text-base sm:text-lg leading-relaxed mb-10 eg-fade-up" style="color:rgba(240,232,232,0.80);">{t.privacy.body}</p>

        <div class="flex flex-col gap-6 md:grid md:grid-cols-2 md:gap-8">
          <div class="eg-glass-dark p-5 sm:p-6 eg-fade-up">
            <h3 class="text-base sm:text-lg font-semibold mb-4" style="color:#f0e8e8;">{t.privacy.example1Title}</h3>
            <div class="flex flex-col gap-3">
              {[
                { step: t.privacy.example1Step1, ok: true },
                { step: t.privacy.example1Step2, ok: true },
                { step: t.privacy.example1Step3, ok: true },
                { step: t.privacy.example1Step4, ok: false },
              ].map(({ step, ok }) => (
                <div class="flex items-start gap-3 text-base">
                  <span class={`w-5 h-5 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5 text-xs font-bold ${ok ? '' : ''}`}
                    style={ok
                      ? 'background:rgba(160,30,40,0.45);color:#ffb3b0;'
                      : 'background:rgba(255,255,255,0.10);color:rgba(240,232,232,0.50);'}>
                    {ok ? '‚úì' : '‚úó'}
                  </span>
                  <span style="color:rgba(240,232,232,0.85);">{step}</span>
                </div>
              ))}
            </div>
          </div>

          <div class="eg-glass-dark p-5 sm:p-6 eg-fade-up">
            <h3 class="text-base sm:text-lg font-semibold mb-4" style="color:#f0e8e8;">{t.privacy.legalTitle}</h3>
            <div class="flex flex-col gap-3">
              {[t.privacy.legal1, t.privacy.legal2, t.privacy.legal3].map((text) => (
                <div class="flex items-start gap-3 text-sm">
                  <span class="w-5 h-5 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5 text-xs font-bold" style="background:rgba(160,30,40,0.25);color:#ffb3b0;">¬ß</span>
                  <span class="leading-relaxed text-base" style="color:rgba(240,232,232,0.82);" set:html={text} />
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê DOCUMENTS ‚Äî light glass ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
    <section id="documents" class="py-16 sm:py-20 md:py-24 px-4 sm:px-6">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold mb-2 t-fg eg-fade-up">{t.documents.heading}</h2>
        <p class="text-sm sm:text-base t-fg opacity-45 mb-10 eg-fade-up">{t.documents.subheading}</p>

        <div class="flex flex-col gap-3 sm:grid sm:grid-cols-2 sm:gap-4">
          {t.documents.items.map(({ icon, title, body, status }) => (
            <div class="eg-glass flex gap-4 p-4 sm:p-5 eg-fade-up">
              <span class="text-2xl flex-shrink-0">{icon}</span>
              <div class="flex flex-col gap-1 min-w-0">
                <div class="flex flex-wrap items-center gap-2">
                  <h3 class="font-semibold text-sm sm:text-base t-fg">{title}</h3>
                  <span class="text-xs px-2 py-0.5 rounded-full font-semibold uppercase tracking-wider"
                    style={status === 'available'
                      ? 'background:rgba(160,30,40,0.12);color:var(--eg-primary);'
                      : 'background:rgba(0,0,0,0.06);color:inherit;opacity:0.45;'}>
                    {status === 'available' ? t.documents.statusAvailable : t.documents.statusSoon}
                  </span>
                </div>
                <p class="text-sm sm:text-base leading-relaxed t-fg opacity-65">{body}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê USE CASES ‚Äî gradient accent header ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
    <section id="usecases" class="py-16 sm:py-20 md:py-24 px-4 sm:px-6" style="background: var(--eg-gradient-subtle);">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold mb-2 t-fg eg-fade-up">{t.useCases.heading}</h2>
        <p class="text-sm sm:text-base t-fg opacity-45 mb-10 eg-fade-up">{t.useCases.subheading}</p>

        <div class="flex flex-col gap-10">
          {t.useCases.categories.map(({ icon, image, title, description, scenarios }) => {
            const videoSrc = image ? image.replace('/assets/illustrations/', '/assets/videos/').replace('.jpg', '.mp4') : null;
            return (
            <div class="eg-fade-up">
              {image && (
                <div class="w-full rounded-2xl mb-5 overflow-hidden" style="max-height: 260px;">
                  <video
                    src={videoSrc ?? undefined}
                    poster={image}
                    autoplay
                    loop
                    muted
                    playsinline
                    class="w-full h-full object-cover"
                    style="max-height: 260px;"
                  />
                </div>
              )}
              <div class="flex items-center gap-3 mb-3">
                <span class="text-2xl">{icon}</span>
                <h3 class="font-bold text-base sm:text-lg md:text-xl t-fg">{title}</h3>
              </div>
              <p class="text-sm sm:text-base leading-relaxed t-fg opacity-50 mb-4">{description}</p>
              <div class="flex flex-col gap-3 sm:grid sm:grid-cols-2 sm:gap-3">
                {scenarios.map(({ emoji, name, body, legal }) => (
                  <div class="eg-glass flex gap-3 p-4 sm:p-5">
                    <span class="text-lg flex-shrink-0 mt-0.5">{emoji}</span>
                    <div>
                      <h4 class="font-semibold text-sm sm:text-base mb-1 t-fg">{name}</h4>
                      <p class="text-sm sm:text-base leading-relaxed t-fg opacity-65 mb-1">{body}</p>
                      {legal && <p class="text-xs sm:text-sm t-fg opacity-50 italic">{legal}</p>}
                    </div>
                  </div>
                ))}
              </div>
            </div>
            );
          })}
        </div>
      </div>
    </section>

    <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê TRUST ‚Äî dark section ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
    <section id="trust" class="eg-section-dark py-16 sm:py-20 md:py-24 px-4 sm:px-6">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold mb-2 eg-fade-up" style="color:#f0e8e8;">{t.trust.heading}</h2>
        <p class="text-base sm:text-lg mb-8 eg-fade-up" style="color:rgba(240,232,232,0.75);">{t.trust.subheading}</p>

        {t.trust.image && (
          <div class="w-full rounded-2xl mb-8 overflow-hidden eg-fade-up" style="max-height: 280px;">
            <video
              src={t.trust.image.replace('/assets/illustrations/', '/assets/videos/').replace('.jpg', '.mp4')}
              poster={t.trust.image}
              autoplay loop muted playsinline
              class="w-full h-full object-cover"
              style="max-height: 280px;"
            />
          </div>
        )}

        <!-- Badges -->
        <div class="flex flex-wrap gap-2 mb-10 eg-fade-up">
          {t.trust.badges.map(({ icon, label }) => (
            <span class="eg-glass-dark flex items-center gap-2 px-3 py-1.5 text-xs sm:text-sm font-medium" style="color:rgba(240,232,232,0.75);border-radius:9999px;">
              <span>{icon}</span>
              <span>{label}</span>
            </span>
          ))}
        </div>

        <div class="flex flex-col gap-6 md:grid md:grid-cols-2 md:gap-8">
          <div class="eg-glass-dark p-5 sm:p-6 eg-fade-up">
            <h3 class="text-base sm:text-lg font-semibold mb-4" style="color:#f0e8e8;">{t.trust.citizenTitle}</h3>
            <div class="flex flex-col gap-3">
              {t.trust.citizenPoints.map((point) => (
                <div class="flex items-start gap-3 text-base">
                  <span class="w-5 h-5 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5 text-xs font-bold" style="background:rgba(160,30,40,0.45);color:#ffb3b0;">‚úì</span>
                  <span style="color:rgba(240,232,232,0.85);">{point}</span>
                </div>
              ))}
            </div>
          </div>

          <div class="eg-glass-dark p-5 sm:p-6 eg-fade-up">
            <h3 class="text-base sm:text-lg font-semibold mb-1" style="color:#f0e8e8;">{t.trust.rpTitle}</h3>
            <p class="text-sm mb-4 italic" style="color:rgba(240,232,232,0.55);">{t.trust.rpSubtitle}</p>
            <div class="flex flex-col gap-3">
              {t.trust.rpPoints.map((point) => (
                <div class="flex items-start gap-3 text-base">
                  <span class="w-5 h-5 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5 text-xs font-bold" style="background:rgba(160,30,40,0.35);color:#ffb3b0;">¬ß</span>
                  <span style="color:rgba(240,232,232,0.82);">{point}</span>
                </div>
              ))}
            </div>
          </div>
        </div>

        <!-- Audit statement -->
        <div class="eg-glass-dark mt-8 p-5 sm:p-6 eg-fade-up">
          <h4 class="font-semibold text-base sm:text-lg mb-2" style="color:#f0e8e8;">{t.trust.auditTitle}</h4>
          <p class="text-sm sm:text-base leading-relaxed" style="color:rgba(240,232,232,0.75);">{t.trust.auditBody}</p>
        </div>
      </div>
    </section>

    <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê WHERE IT WORKS ‚Äî light ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
    <section id="usedtoday" class="py-16 sm:py-20 md:py-24 px-4 sm:px-6">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold mb-2 t-fg eg-fade-up">{t.usedToday.heading}</h2>
        <p class="text-sm sm:text-base t-fg opacity-45 mb-10 eg-fade-up">{t.usedToday.subheading}</p>

        <div class="flex flex-col gap-4 md:grid md:grid-cols-2 md:gap-5">
          {[
            { name: t.usedToday.app1Name, url: t.usedToday.app1Url, body: t.usedToday.app1Body },
            { name: t.usedToday.app2Name, url: t.usedToday.app2Url, body: t.usedToday.app2Body },
          ].map(({ name, url, body }) => (
            <div class="eg-glass flex flex-col gap-3 p-5 sm:p-6 eg-fade-up">
              <h3 class="font-semibold text-sm sm:text-base t-fg">{name}</h3>
              <p class="text-sm leading-relaxed t-fg opacity-55 flex-1">{body}</p>
              <a href={url} target="_blank" rel="noopener"
                class="inline-flex items-center gap-1.5 text-sm font-semibold t-primary hover:underline self-start break-all">
                {url.replace('https://','')}
                <svg class="w-3.5 h-3.5 flex-shrink-0" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M7 17L17 7M17 7H7M17 7v10"/></svg>
              </a>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê VERIFIER ‚Äî gradient accent ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
    <section id="verifier" class="py-16 sm:py-20 md:py-24 px-4 sm:px-6" style="background: var(--eg-gradient-subtle);">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold mb-2 t-fg eg-fade-up">{t.verifier.heading}</h2>
        <p class="text-sm sm:text-base t-fg opacity-45 mb-10 eg-fade-up">{t.verifier.subheading}</p>

        <div class="flex flex-col gap-4 md:grid md:grid-cols-2 md:gap-5">
          <div class="eg-glass flex gap-4 p-5 sm:p-6 eg-fade-up">
            <span class="text-2xl sm:text-3xl flex-shrink-0">üèõÔ∏è</span>
            <div>
              <h3 class="font-semibold text-sm sm:text-base mb-2 t-fg">{t.verifier.card1Title}</h3>
              <p class="text-sm leading-relaxed t-fg opacity-55">{t.verifier.card1Body}</p>
            </div>
          </div>

          <div class="eg-glass flex gap-4 p-5 sm:p-6 eg-fade-up">
            <span class="text-2xl sm:text-3xl flex-shrink-0">üì≤</span>
            <div class="flex flex-col gap-3">
              <h3 class="font-semibold text-sm sm:text-base mb-1 t-fg">{t.verifier.card2Title}</h3>
              <p class="text-sm leading-relaxed t-fg opacity-55">{t.verifier.card2Body}</p>
              <a href="https://play.google.com/store/apps/details?id=com.eguwallet.verifier" target="_blank" rel="noopener" class="transition-opacity hover:opacity-80 self-start">
                <img src={playBadge} alt={t.verifier.playBadgeAlt} class="h-9 sm:h-10 w-auto" />
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê INTEGRATE / SDK ‚Äî dark ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
    <section id="integrate" class="eg-section-dark py-16 sm:py-20 md:py-24 px-4 sm:px-6">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold mb-2 eg-fade-up" style="color:#f0e8e8;">{t.integrate.heading}</h2>
        <p class="text-base sm:text-lg mb-4 eg-fade-up" style="color:rgba(240,232,232,0.75);">{t.integrate.subheading}</p>

        <!-- SDK badges -->
        <div class="flex flex-wrap gap-2 mb-8 eg-fade-up">
          {[t.integrate.badge1, t.integrate.badge2, t.integrate.badge3, t.integrate.badge4].map((badge) => (
            <span class="eg-glass-dark px-3 py-1 text-xs sm:text-sm font-semibold" style="color:rgba(240,232,232,0.70);border-radius:9999px;">{badge}</span>
          ))}
        </div>

        <div class="flex flex-col gap-4 md:grid md:grid-cols-3 md:gap-5 mb-10">
          {[
            { icon: 'üîå', title: t.integrate.card1Title, body: t.integrate.card1Body },
            { icon: '‚úÖ', title: t.integrate.card2Title, body: t.integrate.card2Body },
            { icon: 'üöÄ', title: t.integrate.card3Title, body: t.integrate.card3Body },
          ].map(({ icon, title, body }) => (
            <div class="eg-glass-dark flex flex-col gap-2 p-5 sm:p-6 eg-fade-up">
              <span class="text-2xl sm:text-3xl">{icon}</span>
              <h3 class="font-semibold text-sm sm:text-base" style="color:#f0e8e8;">{title}</h3>
              <p class="text-sm sm:text-base leading-relaxed" style="color:rgba(240,232,232,0.75);">{body}</p>
            </div>
          ))}
        </div>

        <a
          href={`/${lang}/contact/`}
          class="inline-flex items-center gap-2 px-6 py-3 rounded-xl font-semibold text-sm sm:text-base transition-opacity hover:opacity-90 eg-fade-up"
