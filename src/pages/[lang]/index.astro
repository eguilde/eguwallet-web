    </section>

    <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê WHERE IT WORKS ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
    <section id="usedtoday" class="py-24 px-6" style="background:var(--surface-low)">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-16">
          <span class="text-xs font-bold uppercase tracking-[0.2em] mb-4 block" style="color:var(--primary)">In Production</span>
          <h2 class="text-3xl md:text-4xl font-bold" style="color:var(--fg)">{t.usedToday.heading}</h2>
          <p class="mt-4 opacity-60" style="color:var(--fg)">{t.usedToday.subheading}</p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
          {[
            { name: t.usedToday.app1Name, url: t.usedToday.app1Url, body: t.usedToday.app1Body },
            { name: t.usedToday.app2Name, url: t.usedToday.app2Url, body: t.usedToday.app2Body },
          ].map(({ name, url, body }) => (
            <div class="flex flex-col gap-5 p-8 rounded-2xl" style="background:var(--surface);border:1px solid var(--outline-var)">
              <div class="flex items-center gap-4">
                <div class="w-12 h-12 rounded-xl flex items-center justify-center text-xl" style="background:var(--primary);color:#fff">üèõ</div>
                <h3 class="font-bold text-lg" style="color:var(--fg)">{name}</h3>
              </div>
              <p class="text-sm leading-relaxed opacity-70" style="color:var(--fg)">{body}</p>
              <a href={url} target="_blank" rel="noopener"
                class="inline-flex items-center gap-2 px-5 py-2.5 rounded-xl text-sm font-semibold self-start transition-all duration-200 hover:shadow-md"
                style="background:var(--primary);color:#fff">
                {t.usedToday.badgeText}
                <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M7 17L17 7M17 7H7M17 7v10"/></svg>
              </a>
            </div>
          ))}
