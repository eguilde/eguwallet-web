<button
  id="theme-toggle"
  aria-label="Toggle dark/light mode"
  class="min-h-[48px] min-w-[48px] flex items-center justify-center rounded-full
         transition-colors cursor-pointer"
  style="background:var(--surface);border:1px solid var(--outline-var)"
